{
  "tasks": {
    "dev": "vite",
    "wasmbuild": "RUSTFLAGS='--cfg=getrandom_backend=wasm_js' deno run -A jsr:@deno/wasmbuild@0.19.2 -p wasm-fmt-lint --out ./wasm-fmt-lint/dis",
    "test": "deno test --allow-all wasm-fmt-lint"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "vite": "npm:vite@^7.1.3"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "quoteProps": "asNeeded"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-sloppy-imports", "no-explicit-any"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "lib": ["deno.window", "dom", "dom.iterable"]
  },
  "unstable": ["sloppy-imports"]
}
