{
  "tasks": {
    "dev": "vite",
    "wasmbuild": "RUSTFLAGS='--cfg=getrandom_backend=wasm_js' deno run -A jsr:@deno/wasmbuild@0.19.2 -p wasm-fmt-lint --out ./wasm-fmt-lint/build",
    "build": "deno task wasmbuild",
    "test": "deno test --allow-all wasm-fmt-lint"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@shikijs/langs": "npm:@shikijs/langs@^3.12.0",
    "@shikijs/monaco": "npm:@shikijs/monaco@^3.12.0",
    "@shikijs/themes": "npm:@shikijs/themes@^3.12.0",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "monaco-editor-core": "npm:monaco-editor-core@^0.52.2",
    "shiki": "npm:shiki@^3.12.0",
    "tailwindcss": "npm:tailwindcss@^4.1.12",
    "vite": "npm:rolldown-vite@^7.1.5",
    "ts-dedent": "npm:ts-dedent@^2.2.0",
    "typed-query-selector": "npm:typed-query-selector@^2.12.0"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "quoteProps": "asNeeded"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-sloppy-imports", "no-explicit-any"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "types": ["npm:typed-query-selector"],
    "lib": ["deno.window", "dom", "dom.iterable"]
  },
  "unstable": ["sloppy-imports"]
}
